<!-- components/subject-list/template.hbs -->
<table class="table table-striped table-hover " id="userTable">
    <thead>
        <tr>
            <th>Tárgy neve</th>
            <th>Terem</th>
            <th>Leírás</th>
            <th></th>
        </tr>   
    </thead>
    <tbody>
        {{#each subjects}}
        <tr>
            <td>{{subjectName}}</td>
            <td>{{room}}</td>
            <td>{{description}}</td>
            <td>
                {{link-to "Megtekint" "subjects.view" this class="btn btn-primary btn-sm"}}
                {{link-to "Szerkeszt" "subjects.edit" this class="btn btn-warning btn-sm"}}
                <button {{action "deleteSubject" this}} class="btn btn-danger btn-sm">Törlés</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
